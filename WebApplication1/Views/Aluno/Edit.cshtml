@model WebApplication1.Models.Aluno

@{
    ViewBag.Title = "Editar Aluno";
}

<h2 class="text-center mb-4">Editar Aluno</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.Id)

    <div class="container">
        <div class="card p-4 shadow-sm">
            <h4 class="text-primary">Atualize as Informações do Aluno</h4>
            <hr />

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <!-- Nome -->
            <div class="form-group row">
                @Html.LabelFor(m => m.Nome, new { @class = "col-md-2 col-form-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Nome, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Nome, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Email -->
            <div class="form-group row">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 col-form-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- RA -->
            <div class="form-group row">
                @Html.LabelFor(m => m.RA, new { @class = "col-md-2 col-form-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.RA, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.RA, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Nascimento -->
            <div class="form-group row">
                @Html.LabelFor(m => m.Nascimento, new { @class = "col-md-2 col-form-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Nascimento, new { @class = "form-control", type = "date" })
                    @Html.ValidationMessageFor(m => m.Nascimento, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Botão Salvar -->
            <div class="form-group row">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-outline-success btn-lg">Salvar Alterações</button>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4 text-center">
        @Html.ActionLink("Voltar", "Listar", null, new { @class = "btn btn-outline-secondary btn-lg" })
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
