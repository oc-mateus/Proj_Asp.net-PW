@model WebApplication1.Models.Aluno

@{

    ViewBag.Title = "Cadastrar Aluno";

}


<h2>Cadastrar Aluno</h2>


@using (Html.BeginForm())

{

    @Html.AntiForgeryToken()


    <div class="form-group">

        @Html.LabelFor(m => m.Nome)

        @Html.TextBoxFor(m => m.Nome, new { @class = "form-control" })

        @Html.ValidationMessageFor(m => m.Nome)

    </div>

    <div class="form-group">

        @Html.LabelFor(m => m.Email)

        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })

        @Html.ValidationMessageFor(m => m.Email)

    </div>

     <div class="form-group">

        @Html.LabelFor(m => m.RA)

        @Html.TextBoxFor(m => m.RA, new { @class = "form-control" })

        @Html.ValidationMessageFor(m => m.RA)

    </div>

    <div class="form-group">

        @Html.LabelFor(m => m.Nascimento)

        @Html.TextBoxFor(m => m.Nascimento, new { @class = "form-control", type = "date" })

        @Html.ValidationMessageFor(m => m.Nascimento)

    </div>


    <button type="submit" class="btn btn-primary">Salvar</button>

    @Html.ActionLink("Voltar", "Listar", null, new { @class = "btn btn-secondary" })

}


@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")

}