@model WebApplication1.Models.Carro

@{
    ViewBag.Title = "Editar Carro";
}

<h2 class="text-center mb-4">Editar Carro</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="card p-4 shadow-sm">
            <h4 class="text-primary">Detalhes do Carro</h4>
            <hr />

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <!-- Placa -->
            <div class="form-group row">
                @Html.LabelFor(model => model.Placa, htmlAttributes: new { @class = "col-md-2 col-form-label" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Placa, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Placa, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Modelo -->
            <div class="form-group row">
                @Html.LabelFor(model => model.Modelo, htmlAttributes: new { @class = "col-md-2 col-form-label" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Modelo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Modelo, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Ano -->
            <div class="form-group row">
                @Html.LabelFor(model => model.Ano, htmlAttributes: new { @class = "col-md-2 col-form-label" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Ano, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                    @Html.ValidationMessageFor(model => model.Ano, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Cor -->
            <div class="form-group row">
                @Html.LabelFor(model => model.Cor, htmlAttributes: new { @class = "col-md-2 col-form-label" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Cor, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Cor, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Botão Salvar -->
            <div class="form-group row">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-outline-success btn-lg">Salvar</button>
                </div>
            </div>
        </div>
    </div>
}

<div class="mt-4 text-center">
    @Html.ActionLink("Voltar", "Listar", null, new { @class = "btn btn-outline-primary" })
</div>
